<link rel="stylesheet" href="../styles/style.css"> <!-- Link to CSS -->

<table class="data-table">
  <thead>
    <tr>
      <th>Roll Number</th>
      <th>Room No</th>
      <th>Fee Paid</th>
      <th>Fee Due</th>
      <th>Scholarship</th>
      <th>Month</th>
      <th>Monthly Bill</th>
      <% if (typeof user !== 'undefined' && user && user.is_admin) { %>
        <th>Edit</th>
      <% } %>
    </tr>
  </thead>
  <tbody>
    <% if (history.length === 0) { %>
      <tr>
        <td colspan="7">No history found for this student.</td>
        <% if (user && user.is_admin) { %>
          <td><a href="/editstudenthistory/<%= roll_number %>">Click here</a></td>
        <% } %>
      </tr>
    <% } else { %>
      <% history.forEach(item => { %>
        <tr>
          <td><%= item.roll_number %></td>
          <td><%= item.room_no %></td>
          <td><%= item.feepaid %></td>
          <td><%= item.feedue %></td>
          <td><%= item.scholarship %></td>
          <td><%= item.month %></td>
          <td><%= item.monthlybill %></td>
          <% if (user && user.is_admin) { %>
            <td><a href="/editstudenthistory/<%= item.roll_number %>">Click here</a></td>
          <% } %>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>

<p><a href="/dashboard">Go to Dashboard</a></p>
